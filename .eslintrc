{
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6":     true,
    "browser": true,
    "node":    true,
    "mocha":   true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "rules": {
	"indent": [
		"error",
		"tab"
	],
	"linebreak-style": [
		"error",
		"unix"
	],
	"quotes": [
		"error",
		"double"
	],
	"semi": [
		"error",
		"never"
	],
	"no-console": "off",
	"no-control-regex": "off"
  }
}